        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-tailwindcss": "^3.13.1",
        "husky": "^8.0.3",
        "lint-staged": "^15.2.0",
        "playwright": "^1.41.2",
        "playwright-core": "^1.41.2",
        "postcss": "^8.4.33",
