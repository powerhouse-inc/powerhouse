{
    "name": "document-model-electron",
    "productName": "Powerhouse Connect",
    "version": "1.0.1",
    "description": "Powerhouse Connect",
    "main": ".vite/build/main.js",
    "license": "AGPL-3.0-only",
    "author": "acaldas@powerhouse.inc",
    "scripts": {
        "start": "electron-forge start",
        "package": "electron-forge package",
        "make": "electron-forge make",
        "make:mac": "electron-forge make -p darwin",
        "make:linux": "electron-forge make -p linux",
        "make:windows": "electron-forge make -p win32",
        "publish": "electron-forge publish",
        "lint": "eslint --ext .js,.ts . && tsc --noemit --project tsconfig.spec.json",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|jsx|tsx|json)\"",
        "dev:web": "vite -c vite.renderer.config.mjs",
        "build:web": "vite build -c vite.renderer.config.mjs"
    },
    "devDependencies": {
        "@electron-forge/cli": "^6.1.1",
        "@electron-forge/maker-deb": "^6.1.1",
        "@electron-forge/maker-rpm": "^6.1.1",
