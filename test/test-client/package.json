{
  "name": "@powerhousedao/load-test-client",
  "version": "1.0.0",
  "description": "Load testing CLI for Powerhouse Switchboard Reactor",
  "license": "AGPL-3.0-only",
  "type": "module",
  "private": true,
  "bin": {
    "ph-load-test": "dist/src/cli.js"
  },
  "exports": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "scripts": {
    "dev": "tsx src/cli.ts",
    "scenario-1": "tsx src/cli.ts --url http://localhost:4001/graphql --duration 60000 --document-interval 10000 --mutation-interval 5000",
    "scenario-2": "tsx src/cli.ts --url http://localhost:4001/graphql --duration 120000 --document-interval 5000 --mutation-interval 2000",
    "scenario-stress": "tsx src/cli.ts --url http://localhost:4001/graphql --duration 300000 --document-interval 3000 --mutation-interval 500",
    "scenario-single": "tsx src/cli.ts --url http://localhost:4001/graphql --duration 60000 --single-document --mutation-interval 2000",
    "scenario-query": "tsx src/cli.ts --url http://localhost:4001/graphql --duration 60000 --query-mode --mutation-interval 2000",
    "scenario-spam": "tsx src/cli.ts --url http://localhost:4001/graphql --duration 60000 --mutation-interval 500 --document-id",
    "scenario-concurrent": "tsx src/orchestrator.ts --url http://localhost:4001/graphql --clients 3 --duration 60000 --mutation-interval 2000",
    "test": "vitest --run"
  },
  "dependencies": {
    "colorette": "catalog:",
    "commander": "catalog:",
    "document-model": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "catalog:",
    "tsx": "catalog:",
    "vitest": "catalog:"
  }
}
