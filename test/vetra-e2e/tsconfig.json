{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "nodenext",
    "target": "esnext",
    "types": [
      "node",
      "vitest/globals"
    ],
    "lib": [
      "ESNext",
      "dom",
      "dom.iterable"
    ],
    "sourceMap": false,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "references": [
    {
      "path": "../e2e-utils"
    },
    {
      "path": "../../packages/builder-tools"
    },
    {
      "path": "../../packages/common"
    },
    {
      "path": "../../packages/design-system"
    },
    {
      "path": "../../packages/vetra"
    },
    {
      "path": "../../packages/document-model"
    },
    {
      "path": "../../packages/codegen"
    },
    {
      "path": "../../packages/config"
    },
    {
      "path": "../../apps/connect"
    },
    {
      "path": "../../clis/ph-cli"
    },
    {
      "path": "../../packages/reactor-api"
    },
    {
      "path": "../../packages/reactor-browser"
    },
    {
      "path": "../../packages/reactor-local"
    },
    {
      "path": "../../apps/switchboard"
    },
    {
      "path": "../../packages/document-drive"
    }
  ],
  "files": [
    "./powerhouse.manifest.json",
    "./vite.config.ts"
  ],
  "include": [
    "**/*"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".ph"
  ]
}
