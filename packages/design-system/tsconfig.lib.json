{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "types": ["vite/client", "@storybook/types"]
  },
  "references": [
    {
      "path": "../document-model"
    },
    {
      "path": "../scalars"
    },
    {
      "path": "../config"
    },
    {
      "path": "../reactor-browser"
    }
  ],
  "include": ["src", "scripts", "src/**/*.json", "**/*.png", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "**/docs",
    "**/*.stories.tsx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.test.tsx.snap"
  ]
}
