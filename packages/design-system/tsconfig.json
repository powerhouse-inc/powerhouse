{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "outDir": "./dist",
    "resolveJsonModule": true,
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "vite/client",
      "@storybook/types",
      "node",
      "vite/client",
      "vitest/globals",
      "@testing-library/jest-dom",
    ],
    "paths": {
        "#assets": ["./src/assets/index.ts"],
        "#assets/*": ["./src/assets/*"],
        "#connect": ["./src/connect/index.ts"],
        "#powerhouse": ["./src/powerhouse/index.ts"],
        "#rwa": ["./src/rwa/index.ts"],
        "#ui": ["./src/ui/index.ts"],
        "#services": ["./src/services/index.ts"]
    }
  },
  "references": [
    {
      "path": "../document-model"
    },
    {
      "path": "../config"
    },
    {
      "path": "../reactor-browser"
    }
  ],
  "include": [
    "**/*",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "storybook-static",
    "package.json",
    "tsconfig.json"
  ]
}