{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "emitDeclarationOnly": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"]
  },
  "references": [
    {
      "path": "../document-model"
    },
    {
      "path": "../scalars"
    },
    {
      "path": "../config"
    }
  ],
  "include": ["**/*", "**/*.json"],
  "exclude": ["node_modules", "dist", "storybook-static"]
}
