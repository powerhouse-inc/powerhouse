{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "target": "esnext",
        "types": ["node", "vitest/globals"],
        "declaration": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "emitDeclarationOnly": true,
        "baseUrl": "."
    },
    "include": [
        "src/**/*",
        "test/**/*",
        "*.config.ts",
        "*.config.js",
        "reset.d.ts",
        "modules.d.ts",
    ],
    "exclude": ["vite.config.ts", "vite.config.ts"]
}
