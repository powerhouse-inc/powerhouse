{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "outDir": "./dist",
    "composite": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "declaration": true,
    "resolveJsonModule": true,
    "paths": {
      "document-model-libs/document-models": [
        "../document-model-libs/document-models"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/.hygen/**/*.ts",
    "reset.d.ts",
    "*.config.ts"
  ],
  "exclude": ["**/*.esm.t"],
  "references": [
    {
      "path": "./packages/document-model-libs"
    }
  ]
}
