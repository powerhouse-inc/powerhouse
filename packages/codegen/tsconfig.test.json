{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "strictNullChecks": true,
    "outDir": "./src/__tests__/dist",
    "types": ["vitest/globals"],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "references": [{ "path": "./tsconfig.lib.json" }],
  "include": [
    "vitest.config.ts",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/__tests__/**/*",
    "src/**/__tests__/**/*.json"
  ],
  "exclude": [
    "src/**/__tests__/temp/**",
    "**/dist"
  ]
}
