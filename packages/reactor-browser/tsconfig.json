{
  "extends": "../../tsconfig.options.json",
  "compilerOptions": {
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "outDir": "./dist",
    "types": ["vitest/globals"],
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "module": "ESNext",
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "*.ts",
    "package.json"
  ],
  "references": [
    {
      "path": "../document-drive"
    },
    {
      "path": "../document-model"
    },
    {
      "path": "../config"
    },
    {
      "path": "../design-system"
    }
  ]
}
