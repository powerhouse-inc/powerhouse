{
  "name": "document-model",
  "version": "2.19.0",
  "license": "AGPL-3.0-only",
  "private": false,
  "files": [
    "dist"
  ],
  "type": "module",
  "scripts": {
    "check-types": "tsc --build --noEmit",
    "postlint": "npm run check-types",
    "lint": "eslint .",
    "lint:nx": "eslint . --fix --quiet",
    "build": "npm run build:browser && npm run build:node",
    "build:watch": "npm run build:browser -- --watch && npm run build:node -- --watch",
    "build:browser": "tsc --project tsconfig.build.json",
    "build:node": "tsc --project tsconfig.build.json",
    "test": "vitest run",
    "clean": "rimraf dist",
    "clean:node_modules": "rimraf node_modules"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./document-model": {
      "types": "./dist/src/document-model/index.d.ts",
      "import": "./dist/src/document-model/index.js"
    }
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/jest": "^29.5.13",
    "@types/mime": "^4.0.0",
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.12",
    "@types/uuid": "^10.0.0",
    "playwright": "^1.46.1",
    "react": "^18.3.1",
    "rollup-plugin-polyfill-node": "^0.13.0"
  },
  "dependencies": {
    "change-case": "^5.4.4",
    "jszip": "^3.10.1",
    "mime": "^4.0.4",
    "mutative": "^1.0.5",
    "safe-stable-stringify": "^2.4.3",
    "sha1-uint8array": "^0.10.7",
    "zod": "^3.22.4"
  }
}
