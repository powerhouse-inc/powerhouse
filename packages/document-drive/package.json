{
  "name": "document-drive",
  "version": "4.1.0-dev.7",
  "license": "AGPL-3.0-only",
  "type": "module",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/powerhouse-inc/powerhouse"
  },
  "exports": {
    ".": "./dist/index.js",
    "./storage/prisma": "./dist/src/storage/prisma/prisma.js",
    "./*": "./dist/src/*.js"
  },
  "imports": {
    "#*": "./dist/src/*.js"
  },
  "files": [
    "./dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build:tsc": "tsc --build",
    "build:tsc:watch": "tsc --build --watch",
    "lint": "eslint .",
    "lint:nx": "eslint . --fix --quiet",
    "build": "tsc --build",
    "release": "semantic-release",
    "test": "vitest run --coverage --exclude \"test/flaky/**\"",
    "test:flaky": "vitest run --coverage test/flaky",
    "test:watch": "vitest --coverage --exclude \"test/flaky/**\"",
    "bench": "vitest bench",
    "clean": "rimraf dist",
    "clean:node_modules": "rimraf node_modules",
    "migrate": "prisma generate && prisma db push",
    "copy-prisma": "copyfiles prisma/schema.prisma dist/ && copyfiles 'src/storage/prisma/client/**/*' dist/",
    "prebuild:tsc": "prisma generate --no-hints",
    "prebuild": "npm run clean && prisma generate --no-hints && npm run copy-prisma",
    "prelint:nx": "prisma generate --no-hints"
  },
  "optionalDependencies": {
    "@prisma/client": "5.17.0",
    "localforage": "^1.10.0",
    "redis": "^4.6.15",
    "sequelize": "^6.37.3",
    "sqlite3": "^5.1.7"
  },
  "dependencies": {
    "@helia/mfs": "^4.0.3",
    "@powerhousedao/codegen": "workspace:*",
    "@powerhousedao/config": "workspace:*",
    "@prisma/client": "5.17.0",
    "@sindresorhus/fnv1a": "^3.1.0",
    "change-case": "^5.4.4",
    "document-model": "workspace:*",
    "exponential-backoff": "^3.1.1",
    "graphql": "^16.11.0",
    "graphql-request": "^6.1.0",
    "helia": "^5.3.0",
    "json-stringify-deterministic": "^1.0.12",
    "kysely": "^0.28.2",
    "localforage": "^1.10.0",
    "lru-cache": "^11.1.0",
    "nanoevents": "^9.0.0",
    "object-sizeof": "^2.6.5",
    "prisma": "5.17.0",
    "sanitize-filename": "^1.6.3",
    "sequelize": "^6.37.2",
    "sqlite3": "^5.1.7",
    "uuid": "^11.0.5",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@powerhousedao/analytics-engine-core": "^0.5.0",
    "@types/node": "^22.15.17",
    "@types/uuid": "^9.0.8",
    "@vitest/coverage-v8": "^3.1.2",
    "copyfiles": "^2.4.1",
    "fake-indexeddb": "^5.0.2",
    "msw": "^2.3.1",
    "typescript": "^5.7.3",
    "vite": "^6.3.3",
    "vitest": "^3.1.2",
    "vitest-fetch-mock": "^0.4.5",
    "webdriverio": "^9.0.9"
  }
}
