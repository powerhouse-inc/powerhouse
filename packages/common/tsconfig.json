{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node", "vitest/globals", "@types/wicg-file-system-access", "@storybook/types"],
    "outDir": "./dist",
    "jsx": "react-jsx",
    "lib": ["ESNext", "dom", "dom.iterable"],
    "resolveJsonModule": true
  },
  "include": [
    "**/*",
    "./package.json"
  ],
  "exclude": ["dist", "node_modules", "storybook-static"],
  "references": [
    {
      "path": "../../packages/document-model"
    },
    {
      "path": "../../packages/design-system"
    },
    {
      "path": "../../packages/builder-tools"
    },
    {
      "path": "../../packages/document-drive"
    }
  ]
}
