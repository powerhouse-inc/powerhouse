{
  "permissions": {
    "allow": [
      "mcp__context7",
      "Bash(pnpm:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(tree:*)",
      "Skill(codex:*)",
      "Bash(java:*)",
      "Bash(echo:*)",
      "Bash(git show:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git status:*)",
      "mcp__ide",
      "WebSearch",
      "WebFetch(domain:github.com)",
      "mcp__chrome-devtools",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "Bash(npm run build:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npx prettier --write \"$(jq -r '.tool_input.file_path')\"",
            "timeout": 30
          }
        ]
      }
    ]
  }
}