{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "tsc": "tsc",
    "tsc:build": "tsc --build",
    "check": "pnpm tsc:build && pnpm lint",
    "build": "pnpm tsc:build && pnpm build:misc && pnpm build:css && pnpm build:vite",
    "test": "pnpm -r --no-bail test",
    "test:ci": "pnpm --filter !document-drive --filter !reactor -r --no-bail test",
    "test:coverage": "pnpm vitest run --coverage",
    "simulate-ci-workflow": "pnpm clean && pnpm install:ci && pnpm check && pnpm build && pnpm install && pnpm test:ci && pnpm build:storybook",
    "lint": "NODE_OPTIONS=--max-old-space-size=8192 eslint --config eslint.config.js --quiet --fix --cache --cache-strategy content",
    "install:ci": "pnpm i --frozen-lockfile",
    "build:misc": "pnpm --filter !academy -r --no-bail build && pnpm install:ci",
    "build:css": "pnpm -r --no-bail build:css",
    "build:vite": "pnpm -r --no-bail build:vite",
    "build:storybook": "pnpm -r --no-bail run build-storybook",
    "clean": "pnpm exec scripts/simulate-fresh-git-clone.sh",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.38.0",
    "@jscutlery/semver": "^5.7.1",
    "@nx/devkit": "20.4.6",
    "@nx/js": "20.4.6",
    "@nx/plugin": "^20.4.6",
    "@swc-node/register": "~1.10.10",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.11.31",
    "@swc/helpers": "~0.5.17",
    "@types/node": "^24.9.2",
    "@types/semver": "^7.7.1",
    "@types/yargs": "^17.0.34",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.1",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "monocart-coverage-reports": "^2.12.9",
    "nx": "20.4.6",
    "playwright": "^1.56.1",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.1.0",
    "semver": "^7.7.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "catalog:",
    "vitest-monocart-coverage": "^3.0.2",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "@nx/devkit": "20.4.6",
    "@nx/plugin": "^20.8.2"
  },
  "engines": {
    "node": ">=22"
  },
  "resolutions": {
    "zod": "^3.24.3"
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        2,
        "always",
        200
      ]
    }
  }
}
