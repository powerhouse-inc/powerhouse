{
    "name": "root",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "clean": "nx run-many --target=clean --all --parallel",
        "clean:node_modules": "nx run-many --target=clean:node_modules --all --parallel && rimraf node_modules",
        "build:packages": "nx run-many -t build -p document-model document-model-libs @powerhousedao/design-system",
        "build:all": "nx run-many --target=build --all",
        "prepare": "husky",
        "check-types": "tsc",
        "check-types:all": "nx run-many --target=check-types --all",
        "postlint": "npm run check-types",
        "lint": "eslint",
        "lint:all": "nx run-many --target=lint --all"
    },
    "devDependencies": {
        "@commitlint/cli": "^19.3.0",
        "@commitlint/config-conventional": "^19.2.2",
        "@eslint/compat": "^1.2.0",
        "@eslint/js": "^9.12.0",
        "@jscutlery/semver": "^5.2.2",
        "@nx/eslint": "20.0.0",
        "@nx/js": "20.0.0",
        "@swc-node/register": "~1.9.1",
        "@swc/core": "~1.5.7",
        "@swc/helpers": "~0.5.11",
        "@total-typescript/ts-reset": "^0.6.1",
        "@types/eslint__js": "^8.42.3",
        "@types/node": "^22.7.5",
        "@vitest/browser": "^2.0.5",
        "@vitest/coverage-v8": "^2.1.2",
        "@zkochan/js-yaml": "^0.0.7",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.2.1",
        "eslint-plugin-react": "^7.37.1",
        "eslint-plugin-react-hooks": "^4.6.2",
        "eslint-plugin-storybook": "^0.9.0",
        "eslint-plugin-tailwindcss": "^3.17.4",
        "globals": "^15.11.0",
        "husky": "^9.1.4",
        "nx": "20.0.0",
        "prettier": "^3.3.3",
        "rimraf": "^6.0.1",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.8.1",
        "vite": "^5.4.8",
        "vite-plugin-dts": "^4.2.3",
        "vitest": "^2.1.2"
    }
}
