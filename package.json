{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "tsc": "tsc",
    "test-ci": "pnpm -r --no-bail --filter=!codegen --filter=!document-drive --filter=!reactor --filter=!atlas --filter=!load-test-client --filter=!scripts run test -- --silent passed-only related",
    "test-codegen": "pnpm --filter=codegen run test -- --silent passed-only related",
    "test-coverage": "pnpm vitest run --coverage",
    "simulate-ci-workflow": "pnpm clean && pnpm install-ci && pnpm check-ts-references && pnpm check-wrong-tsc-usage && pnpm build-tsc && pnpm build-misc && pnpm build-css && pnpm build-vite && pnpm install-ci && pnpm lint && pnpm test-ci && pnpm test-codegen && pnpm build-storybook && pnpm check-circular-imports",
    "lint": "NODE_OPTIONS=--max-old-space-size=8192 eslint --config eslint.config.js --quiet --fix --cache --cache-strategy content",
    "install-ci": "pnpm i --frozen-lockfile",
    "build-tsc": "tsc --build",
    "build-misc": "pnpm -r --no-bail --filter=!academy run build",
    "build-css": "pnpm -r --no-bail build:css",
    "build-vite": "pnpm -r --no-bail build:vite",
    "build-bundle": "pnpm -r --no-bail bundle",
    "build-storybook": "pnpm -r --no-bail run build:storybook",
    "build-all": "pnpm build-tsc && pnpm build-misc && pnpm build-css && pnpm build-vite",
    "clean": "pnpm exec scripts/simulate-fresh-git-clone.sh",
    "run-release": "GITHUB_REF_NAME=main bun run releases/release.ts",
    "prepare": "husky",
    "check-circular-imports": "dpdm -T ./**/* --no-tree --no-warning --exit-code circular:1",
    "check-ts-references": "tsx scripts/check-ts-references.ts",
    "check-wrong-tsc-usage": "tsx scripts/check-wrong-tsc-usage.ts"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.36.0",
    "@jscutlery/semver": "^5.6.0",
    "@nx/devkit": "20.4.6",
    "@nx/js": "20.4.6",
    "@nx/plugin": "^20.4.6",
    "@swc-node/register": "~1.10.9",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.11.1",
    "@swc/helpers": "~0.5.15",
    "@types/node": "^24.6.1",
    "@types/semver": "^7.7.0",
    "@types/yargs": "^17.0.33",
    "dpdm": "^3.14.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^6.1.0",
    "glob": "^11.0.3",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "monocart-coverage-reports": "^2.12.8",
    "nx": "20.4.6",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "semver": "^7.7.2",
    "tsx": "^4.20.3",
    "typescript": "5.9.3",
    "typescript-eslint": "^8.45.0",
    "vitest": "^3.2.4",
    "vitest-monocart-coverage": "^3.0.2",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "@nx/devkit": "20.4.6",
    "@nx/plugin": "^20.4.6",
    "fast-glob": "^3.3.3",
    "read-pkg": "^9.0.1"
  },
  "engines": {
    "node": ">=24"
  },
  "pnpm": {
    "overrides": {
      "document-model": "link:./packages/document-model",
      "document-drive": "link:./packages/document-drive",
      "vite": "^7.2.6"
    },
    "onlyBuiltDependencies": [
      "nx"
    ]
  },
  "commitlint": {
    "rules": {
      "header-max-length": [
        2,
        "always",
        200
      ]
    }
  }
}