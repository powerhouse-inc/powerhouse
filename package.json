{
  "name": "root",
  "private": true,
  "type": "module",
  "scripts": {
    "check": "pnpm tsc && pnpm lint",
    "build": "pnpm build:misc && pnpm build:css && pnpm build:vite",
    "test": "pnpm -r --no-bail test",
    "test:ci": "pnpm --filter !document-drive -r --no-bail test",
    "simulate-ci-workflow": "pnpm clean && pnpm i --frozen-lockfile && pnpm check && pnpm build && pnpm test:ci && pnpm build:storybook",
    "tsc": "tsc --build",
    "lint": "NODE_OPTIONS=--max-old-space-size=8192 eslint --config eslint.config.js --quiet --fix --cache --cache-strategy content",
    "build:misc": "pnpm --filter !academy -r --no-bail build",
    "build:css": "pnpm -r --no-bail build:css",
    "build:vite": "pnpm -r --no-bail build:vite",
    "build:storybook": "pnpm -r --no-bail run build-storybook",
    "clean": "pnpm exec scripts/simulate-fresh-git-clone.sh",
    "prepare": "husky"

  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.2.7",
    "@eslint/js": "^9.21.0",
    "@jscutlery/semver": "^5.6.0",
    "@nx/devkit": "20.4.6",
    "@nx/plugin": "^20.4.6",
    "@storybook/addon-actions": "^8.6.3",
    "@storybook/addon-docs": "^8.6.3",
    "@storybook/addon-essentials": "^8.6.3",
    "@storybook/addon-interactions": "^8.6.3",
    "@storybook/addon-links": "^8.6.3",
    "@storybook/addon-themes": "^8.6.3",
    "@storybook/blocks": "^8.6.3",
    "@storybook/components": "^8.6.3",
    "@storybook/manager-api": "^8.6.3",
    "@storybook/preview-api": "^8.6.3",
    "@storybook/react": "^8.6.3",
    "@storybook/react-vite": "^8.6.3",
    "@storybook/test": "^8.6.3",
    "@storybook/types": "^8.6.3",
    "@swc-node/register": "~1.10.9",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.11.1",
    "@swc/helpers": "~0.5.15",
    "@types/node": "^24.3.0",
    "@types/semver": "^7.7.0",
    "@types/yargs": "^17.0.33",
    "chromatic": "^11.26.1",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^11.0.3",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "nx": "20.4.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "semver": "^7.7.2",
    "storybook": "^8.6.3",
    "storybook-addon-pseudo-states": "^4.0.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.1.2",
    "yargs": "^18.0.0"
  },
  "dependencies": {
    "@nx/devkit": "20.4.6",
